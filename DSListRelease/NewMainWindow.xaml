<Controls:MetroWindow x:Class="DSList.NewMainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                      xmlns:sys="clr-namespace:System;assembly=mscorlib"
        xmlns:local="clr-namespace:DSList"
                      xmlns:p9="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
                                            xmlns:osc="clr-namespace:DSList.OpenSourceControls"
        mc:Ignorable="d"
        xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        xmlns:Properties="clr-namespace:DSList.Properties" 
         Height="800" Width="1200" Icon="Resources/vsnetwebservicedynamicdiscovery_8215.ico" Loaded="NewMainWindow_Loaded" PreviewKeyDown="NewMainWindow_PreviewKeyDown" >

    <Controls:MetroWindow.RightWindowCommands>
        <Controls:WindowCommands>
            <Button Name="btnSettingMainWindow" Content="Настройки" Click="SettingsMenuItem_Click"
                    ToolTip="Настройки программы"/>

            <Button Click="CakeButton_Click" ToolTip="Дополнительный функционал программы(часть функционала не работает)">
                <StackPanel Orientation="Horizontal">
                    <Rectangle Width="20"
                   Height="20"
                   Fill="{Binding Foreground, RelativeSource={RelativeSource AncestorType={x:Type Button}}}">
                        <Rectangle.OpacityMask>
                            <VisualBrush Stretch="Fill" Visual="{StaticResource appbar_cupcake}" />
                        </Rectangle.OpacityMask>
                    </Rectangle>
                    <!--<TextBlock Margin="4 0 0 0"
                   VerticalAlignment="Center"
                   Text="Кексик" />-->
                </StackPanel>
            </Button>

            <Button Name="btnLogsMainWindow" Content="Логи" Click="LogsMenuItem_Click"
                    ToolTip="Открывает в проводнике расположение логов программы"/>

        </Controls:WindowCommands>
    </Controls:MetroWindow.RightWindowCommands>

    <Controls:MetroWindow.Resources>
        <!--<local:BoolToVisibleOrHidden/>-->
        <Style x:Key="HeaderRefRes">
            <Setter Property="TextBlock.FontSize" Value="24"/>
            <Setter Property="TextBlock.Margin" Value="5,0,0,0"/>
            <Setter Property="TextBlock.FontFamily" Value="pack://application:,,,/#Segoe UI Symbol"/>
        </Style>

        <Style x:Key="HeaderImageRefRes">
            <Setter Property="FrameworkElement.Width" Value="30"/>
            <Setter Property="FrameworkElement.Height" Value="30"/>
        </Style>

        <local:BoolToVisibleOrHidden x:Key="BoolToVisibleOrHidden"/>
        <local:VisibleForTypeHost x:Key="VisibleForTypeHost"/>

        <local:IsEmptyConverter x:Key="IsEmptyConverter"/>

        <!-- Контекстное меню для Верхней части надписей Customer -->
        <ContextMenu x:Key="CustomerUpContextMenu">
            <MenuItem Header="Копировать Код ЦВЗ"               
                      Tag="1"                               
                      Click="CustomerContextMenu_Click">
                <MenuItem.Icon>
                    <Image Source="/Resources/copy_6524.png"/>
                </MenuItem.Icon>
            </MenuItem>
            <MenuItem Header="Копировать Адрес ЦВЗ"          
                      Tag="2"                               
                      Click="CustomerContextMenu_Click">
                <MenuItem.Icon>
                    <Image Source="/Resources/copy_6524.png"/>
                </MenuItem.Icon>
            </MenuItem>
            <MenuItem Header="Копировать Полное имя ЦВЗ"      
                      Tag="3"                                 
                      Click="CustomerContextMenu_Click">
                <MenuItem.Icon>
                    <Image Source="/Resources/copy_6524.png"/>
                </MenuItem.Icon>
            </MenuItem>
        </ContextMenu>
        
       
        <ObjectDataProvider MethodName="GetValues" ObjectType="{x:Type sys:Enum}" x:Key="IPTypeEnum">
            <ObjectDataProvider.MethodParameters>
                <x:Type Type="local:IPType"/>
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>


    </Controls:MetroWindow.Resources>

