    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="640*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>

            <ColumnDefinition Width="100"/>
            <ColumnDefinition/>

        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0" Grid.Row="1" Grid.RowSpan="2">
            <ListBox x:Name="listBox" 
                 VerticalContentAlignment="Center"
                 >
                <ListBoxItem Name="lbiVersions" TabIndex="0" Visibility="Collapsed"/>

                <ListBoxItem Name="listBoxItemSearchCVZ" TabIndex="1" ToolTip="Поиск ЦВЗ и личный список хостов">
                    <StackPanel  HorizontalAlignment="Stretch" Width="auto">
                        <Grid Width="50" Height="50"
                              HorizontalAlignment="Center" VerticalAlignment="Center" 
                              Margin="10,10,10,0">
                            <Image Source="Resources/gnome_search_tool.png"/>
                        </Grid>
                        <TextBlock FontSize="12"
                    HorizontalAlignment="Center" VerticalAlignment="Center"><Run Text="Поиск"/></TextBlock>
                        <TextBlock FontSize="12"
                    HorizontalAlignment="Center" VerticalAlignment="Center"><Run Text="ЦВЗ"/></TextBlock>
                    </StackPanel>
                </ListBoxItem>

                <ListBoxItem TabIndex="2" 
                             ToolTip="(Работает только из под TS)Просмотр пользователей, подключенных к TS в настоящий момент.">
                    <StackPanel  HorizontalAlignment="Stretch" Width="auto">
                        <Grid Width="50" Height="50"
                      HorizontalAlignment="Center" VerticalAlignment="Center" 
                    Margin="10,10,10,0">
                            <Image Source="Resources/TS1.png" />
                        </Grid>
                        <TextBlock FontSize="12"
                    HorizontalAlignment="Center" VerticalAlignment="Center"><Run Text="Пользователи"/></TextBlock>
                        <TextBlock FontSize="12"
                    HorizontalAlignment="Center" VerticalAlignment="Center"><Run Text="TS"/></TextBlock>
                    </StackPanel>
                </ListBoxItem>

                <ListBoxItem TabIndex="3" ToolTip="(Работает только из под TS)Просмотр пользователей из AD.">
                    <StackPanel >
                        <Grid Width="50" Height="50"
                      HorizontalAlignment="Center" VerticalAlignment="Center" 
                    Margin="10,10,10,0">
                            <Image Source="/resources/ADUsers.png"/>
                        </Grid>
                        <TextBlock FontSize="12"
                    HorizontalAlignment="Center" VerticalAlignment="Center"><Run Text="Пользователи"/></TextBlock>
                        <TextBlock FontSize="12"
                    HorizontalAlignment="Center" VerticalAlignment="Center"><Run Text="AD"/></TextBlock>
                    </StackPanel>
                </ListBoxItem>

                <ListBoxItem TabIndex="4" ToolTip="Перечень основных ссылок на ресурсы ОТП">
                    <StackPanel >
                        <Grid Width="50" Height="50"
                      HorizontalAlignment="Center" VerticalAlignment="Center" 
                    Margin="10,10,10,0">
                            <Image Source="Resources/Reference.jpg"/>
                        </Grid>
                        <TextBlock FontSize="12"
                    HorizontalAlignment="Center" VerticalAlignment="Center"><Run Text="Ссылки"/></TextBlock>

                    </StackPanel>
                </ListBoxItem>

                <ListBoxItem TabIndex="5" ToolTip="История ранее открытых ЦВЗ и хостов">
                    <StackPanel >
                        <Grid Width="50" Height="50"
                      HorizontalAlignment="Center" VerticalAlignment="Center" 
                    Margin="10,10,10,0">
                            <Image Source="Resources/History.png"/>
                        </Grid>
                        <TextBlock FontSize="12"
                    HorizontalAlignment="Center" VerticalAlignment="Center"><Run Text="История"/></TextBlock>

                    </StackPanel>
                </ListBoxItem>

                <ListBoxItem Name="lbiHelp" TabIndex="6" Visibility="Collapsed"/>


            </ListBox>
        </Grid>

        <StackPanel Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="2" 
                   VerticalAlignment="Stretch"
                   Background="LightGray"
                   >

            <StackPanel Orientation="Horizontal">
                <Image Name="StatusError" Width="16" Height="16" Source="resources/Error_red_16x16.png" Visibility="Hidden" Opacity="1">
                    <FrameworkElement.Style>
                        <Style>
                            <Style.Triggers>
                                <EventTrigger EventTrigger.RoutedEvent="Image.Loaded">
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetProperty="(Image.Opacity)" Timeline.BeginTime="0:0:0" Timeline.Duration="0:0:0.5" DoubleAnimation.From="1.0" DoubleAnimation.To="0.0" Timeline.RepeatBehavior="Forever" Timeline.AutoReverse="True" />
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                            </Style.Triggers>
                        </Style>
                    </FrameworkElement.Style>
                </Image>
                <TextBlock x:Name="StatusBar" VerticalAlignment="Center" Margin="10" Foreground="DimGray"
                       Text="{Binding StatusBarText, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"/>
            </StackPanel>

            <Controls:MetroProgressBar Name="progressBarStatus"
                                       DockPanel.Dock="Bottom" 
                                       Height="15"/>
        </StackPanel>



        <TabControl Margin="0,-7,0,0" Grid.Column="1" Grid.Row="1"
                SelectedIndex="{Binding SelectedItem.TabIndex, ElementName=listBox}">

            <TabItem Name="tabVersions">
                <Frame Name="frameVersions"/>
            </TabItem>

            <TabItem Name="tabItemSearchCVZ">

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="900*"/>
                        <ColumnDefinition Width="200"/>
                    </Grid.ColumnDefinitions>

                    <Grid Grid.Column="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="150"/>
                            <RowDefinition Height="520*"/>
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0" >
                            <GroupBox x:Name="CommonAutorization" Margin="0"
                                    Header="Авторизация для IP хоста">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="50"/>
                                        <ColumnDefinition Width="150"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="auto"/>
                                        <RowDefinition Height="auto"/>
                                        <RowDefinition Height="auto"/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Margin="0,7,7,0" Text="Логин:" 
                                   Grid.Column="0" Grid.Row="0"
                                   VerticalAlignment="Center"/>
                                    <ComboBox Margin="0,7,7,0"
                                          HorizontalAlignment="Left"
                                  Grid.Column="1" 
                                  Width="120" 
                                  VerticalAlignment="Center" 
                                  IsEditable="True" 
                                  DisplayMemberPath="Value" 
                                  SelectedValuePath="Value" 
                                  ItemsSource="{Binding Logins}" 
                                  Loaded="ComboBox_Loaded"
                                  
                                  Text="{Binding Login}" />


                                    <TextBlock Margin="0,7,7,0" Grid.Row="1" 
                                   Text="Пароль:" 
                                   VerticalAlignment="Center" />

                                    <ComboBox Margin="0,7,7,0" 
                                          HorizontalAlignment="Left"
                                  Grid.Row="1" Grid.Column="1" 
                                  Width="120" 
                                  VerticalAlignment="Center" 
                                  IsEditable="True" 
                                  DisplayMemberPath="Value" 
                                  SelectedValuePath="Value" 
                                  ItemsSource="{Binding Passwords}" 
                                  Loaded="ComboBox_Loaded"
                                  Text="{Binding Password}" />
                                    

                                    <Button Name="SelIPCredentialFill" Grid.Column="0" Grid.Row="2" Width="25" Margin="0" Padding="0"
                                        Controls:ControlsHelper.CornerRadius="20"
                                        VerticalAlignment="Center" HorizontalAlignment="Center"
                                      ToolTip="Подобрать пароль по типу хоста"
                                            Click="SelIPCredentialFill_Click"
                                      IsEnabled="{Binding isipselected, UpdateSourceTrigger=PropertyChanged}" 
                                        >
                                        <Image Source="/Resources/pass_5360_16x16.png"/>
                                    </Button>

                                </Grid>

                            </GroupBox>
                        </Grid>

                        <Grid Grid.Row="1" Background="Lavender"
                          Margin="0">
                            <StackPanel >
                                <Label Content="Установка пакетов" Margin="10,0,0,0" FontSize="14"/>

                                <Button x:Name="TestScript" Height="30" 
                                    Visibility="{Binding VisibilitySetting}"
                                    HorizontalContentAlignment="Stretch"
                                    VerticalContentAlignment="Center"
                                        ToolTip="TestScript"
                                        IsEnabled="{Binding isipselected, UpdateSourceTrigger=PropertyChanged}" 
                                        Command="local:Commands.TESTScript"
                                        >
                                    <StackPanel HorizontalAlignment="Left" Orientation="Horizontal">
                                        <Image Source="Resources/1c.png" Width="15" Height="15"/>
                                        <TextBlock Text="TestScript" Margin="2" VerticalAlignment="Center" FontSize="11"/>
                                    </StackPanel>
                                </Button>





                                <Button x:Name="StackZimbraComplectScript" Height="30"
                                    HorizontalContentAlignment="Stretch"
                                    VerticalContentAlignment="Center"
                                        ToolTip="Установка Zimbra 7.2.8 на ПК"
                                        IsEnabled="{Binding isipselected, UpdateSourceTrigger=PropertyChanged}" 
                                        Command="local:Commands.ZimbraComplectScript">
                                    <StackPanel HorizontalAlignment="Left" Orientation="Horizontal">
                                        <Image Source="Resources/zimbradesktop-60x60.png" Width="15" Height="15"/>
                                        <TextBlock Text="Скрипт Zimbra 7.2.8"  Margin="2" VerticalAlignment="Center" FontSize="11"/>
                                    </StackPanel>
                                </Button>

                                <Button x:Name="StackZimbraComplect" Height="30"
                                    HorizontalContentAlignment="Stretch"
                                    VerticalContentAlignment="Center"
                                        ToolTip="Скопировать установочный пакет Zimbra 7.2.8"
                                        IsEnabled="{Binding isipselected, UpdateSourceTrigger=PropertyChanged}" 
                                        Command="local:Commands.ZimbraComplect">
                                    <StackPanel HorizontalAlignment="Left" Orientation="Horizontal">
                                        <Image Source="Resources/zimbradesktop-60x60.png" Width="15" Height="15"/>
                                        <TextBlock Text="Комплект Zimbra 7.2.8"  Margin="2" VerticalAlignment="Center" FontSize="11"/>
                                    </StackPanel>
                                </Button>


                                <Label Content="Скрипты ЦВЗ" Margin="10,0,0,0" FontSize="14"/>

                                <Button x:Name="HostPCInfoScript" Height="30" 
                                    HorizontalContentAlignment="Stretch"
                                    VerticalContentAlignment="Center"
                                        ToolTip="Получить информацию по хосту АРМ (имя, CPU, ОЗУ, материнская плата и HDD"
                                        IsEnabled="{Binding isipselected, UpdateSourceTrigger=PropertyChanged}" 
                                        Command="local:Commands.HostPCInfo"
                                        >
                                    <StackPanel HorizontalAlignment="Left" Orientation="Horizontal">
                                        <Image Source="Resources/info.png" Width="15" Height="15"/>
                                        <TextBlock Text="Информация по хосту АРМ" Margin="2" VerticalAlignment="Center" FontSize="11"/>
                                    </StackPanel>
                                </Button>

                                <Button x:Name="RestartHostPCScript" Height="30" 
                                    HorizontalContentAlignment="Stretch"
                                    VerticalContentAlignment="Center"
                                        ToolTip="Выполнить перезагрузку хоста АРМ"
                                        IsEnabled="{Binding isipselected, UpdateSourceTrigger=PropertyChanged}" 
                                        Command="local:Commands.RestartHostPC"
                                        >
                                    <StackPanel HorizontalAlignment="Left" Orientation="Horizontal">
                                        <Image Source="Resources/power-restart.png" Width="15" Height="15"/>
                                        <TextBlock Text="Перезагрузка хоста АРМ" Margin="2" VerticalAlignment="Center" FontSize="11"/>
                                    </StackPanel>
                                </Button>

                                <Button x:Name="ClearMotionScript" Height="30" 
                                    HorizontalContentAlignment="Stretch"
                                    VerticalContentAlignment="Center"
                                        ToolTip="Выполнить чистку Motion хоста АРМ"
                                        IsEnabled="{Binding isipselected, UpdateSourceTrigger=PropertyChanged}" 
                                        Command="local:Commands.ClearMotionHostPC"
                                        >
                                    <StackPanel HorizontalAlignment="Left" Orientation="Horizontal">
                                        <Image Source="Resources/clean_brush-48.png" Width="15" Height="15"/>
                                        <TextBlock Text="Выполнить чистку Motion" Margin="2" VerticalAlignment="Center" FontSize="11"/>
                                    </StackPanel>
                                </Button>

                                <Button x:Name="ZabbixAgentUpdateScript" Height="30" 
                                    HorizontalContentAlignment="Stretch"
                                    VerticalContentAlignment="Center"
                                        ToolTip="Выполнить обновление агента Zabbix хоста АРМ"
                                        IsEnabled="{Binding isipselected, UpdateSourceTrigger=PropertyChanged}" 
                                        Command="local:Commands.ZabbixAgentUpdate"
                                        >
                                    <StackPanel HorizontalAlignment="Left" Orientation="Horizontal">
                                        <Image Source="Resources/zabbix.jpg" Width="15" Height="15"/>
                                        <TextBlock Text="Обновление Zabbix Agent" Margin="2" VerticalAlignment="Center" FontSize="11"/>
                                    </StackPanel>
                                </Button>

                                <Button x:Name="SmartCtlScript" Height="30" 
                                    HorizontalContentAlignment="Stretch"
                                    VerticalContentAlignment="Center"
                                        ToolTip="Выполнить просмотр S.M.A.R.T хоста АРМ"
                                        IsEnabled="{Binding isipselected, UpdateSourceTrigger=PropertyChanged}" 
                                        Command="local:Commands.SmartCtl"
                                        >
                                    <StackPanel HorizontalAlignment="Left" Orientation="Horizontal">
                                        <Image Source="Resources/smart.png" Width="15" Height="15"/>
                                        <TextBlock Text="S.M.A.R.T HDD хоста АРМ" Margin="2" VerticalAlignment="Center" FontSize="11"/>
                                    </StackPanel>
                                </Button>

                                <Button x:Name="DS_BenchmarkScript" Height="30" 
                                    HorizontalContentAlignment="Stretch"
                                    VerticalContentAlignment="Center"
                                        ToolTip="Выполнить DS_Benchmark для хоста АРМ"
                                        IsEnabled="{Binding isipselected, UpdateSourceTrigger=PropertyChanged}" 
                                        Command="local:Commands.DS_Benchmark"
                                        >
                                    <StackPanel HorizontalAlignment="Left" Orientation="Horizontal">
                                        <Image Source="Resources/benchmark.png" Width="15" Height="15"/>
                                        <TextBlock Text="Выполнить DS_Benchmark" Margin="2" VerticalAlignment="Center" FontSize="11"/>
                                    </StackPanel>
                                </Button>

